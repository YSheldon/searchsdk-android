<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/searh_bar_demo_message"
            android:text="@string/demo_search_bar_message"
            style="@style/Widget.SearchDemo.MessageTextView"
            android:textAppearance="@style/TextAppearance.SearchDemo.MessageTextAppearance" />


        <com.yahoo.android.search.showcase.views.SearchBarView
            android:id="@+id/demo_search_bar_all_layout"
            android:layout_margin="@dimen/search_bar_margin"
            android:layout_width="match_parent"
            custom:displayText="@string/demo_search"
            custom:voiceSearchEnabled="true"
            android:layout_height="@dimen/search_bar_height" />

        <com.yahoo.android.search.showcase.views.SearchSettingsView
            android:id="@+id/demo_search_settings_all_layout"
            style="@style/Widget.SearchDemo.SearchBarSearchSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View style="@style/Widget.SearchDemo.Separator" />

        <com.yahoo.android.search.showcase.views.SearchBarView
            android:id="@+id/demo_search_bar_images_layout"
            android:layout_margin="@dimen/search_bar_margin"
            android:layout_marginRight="@dimen/search_bar_margin"
            android:layout_width="match_parent"
            custom:displayText="@string/demo_search_images"
            custom:voiceSearchEnabled="true"
            android:layout_height="@dimen/search_bar_height" />

        <com.yahoo.android.search.showcase.views.SearchSettingsView
            android:id="@+id/demo_search_settings_images_layout"
            style="@style/Widget.SearchDemo.SearchBarSearchSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View style="@style/Widget.SearchDemo.Separator" />

        <com.yahoo.android.search.showcase.views.SearchBarView
            android:id="@+id/demo_search_bar_media_layout"
            android:layout_margin="@dimen/search_bar_margin"
            android:layout_width="match_parent"
            custom:displayText="@string/demo_search_media"
            custom:voiceSearchEnabled="true"
            android:layout_height="@dimen/search_bar_height" />

        <com.yahoo.android.search.showcase.views.SearchSettingsView
            android:id="@+id/demo_search_settings_media_layout"
            style="@style/Widget.SearchDemo.SearchBarSearchSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>