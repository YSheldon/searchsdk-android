<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/demo_search_icon_imageview"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/search_bar_view_voice_icon_margin"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/search_bar_view_search_icon_size"
        android:layout_height="@dimen/search_bar_view_search_icon_size"
        android:src="@drawable/search_icon" />

    <TextView
        android:id="@+id/demo_search_bar_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/demo_search_icon_imageview"
        android:paddingLeft="@dimen/search_bar_view_text_padding"
        android:layout_centerInParent="true"
        android:text="@string/demo_search"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/search_bar_view_text_size" />

    <ImageView
        android:id="@+id/demo_voice_search_imageview"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/search_bar_view_voice_icon_margin"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        android:src="@drawable/search_mic" />
</merge>
