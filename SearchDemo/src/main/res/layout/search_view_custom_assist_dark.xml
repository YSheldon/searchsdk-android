<?xml version="1.0" encoding="utf-8"?>
<com.yahoo.android.search.showcase.views.CustomSearchAssistItem
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/yssdk_search_suggest_tip_size"
    android:orientation="horizontal"
    android:background="@color/demo_searchbar_dark_theme_bg">

    <ImageView
        android:id="@+id/icon"
        style="@style/Search.Suggest.Container.Icon.Contact"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:visibility="gone"
        android:gravity="center"
        android:src="@android:drawable/ic_menu_help" />

    <TextView
        android:id="@+id/text"
        style="@style/Search.Suggest.List"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:ellipsize="middle"
        android:gravity="left|center_vertical"
        android:paddingLeft="5dip"
        android:singleLine="true"
        android:text="Search Tip"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/add"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_weight="0.1"
        android:src="@drawable/ic_query_builder"
        android:layout_gravity="center_vertical"
        android:gravity="center" />

</com.yahoo.android.search.showcase.views.CustomSearchAssistItem>